{
	"name": "nest-example",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"build:lib": "turbo run build --filter=./libs/*",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"lint": "turbo run lint",
		"lint-staged": "turbo run lint-staged",
		"prepare": "husky install"
	},
	"devDependencies": {
		"husky": "^7.0.4",
		"prettier": "~2.6.2",
		"pretty-quick": "^3.1.3",
		"turbo": "^1.2.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
		}
	},
	"workspaces": [
		"packages/*",
		"apps/*",
		"libs/*"
	]
}